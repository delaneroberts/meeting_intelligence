{
    "expo": {
        "name": "Meeting Intelligence",
        "slug": "meeting-intelligence-mobile",
        "scheme": "meeting-intelligence",
        "version": "0.1.0",
        "orientation": "portrait",
        "userInterfaceStyle": "automatic",
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSMicrophoneUsageDescription": "This app needs microphone access to record meeting audio."
            }
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#0F172A"
            },
            "permissions": [
                "RECORD_AUDIO"
            ]
        }
    }
}